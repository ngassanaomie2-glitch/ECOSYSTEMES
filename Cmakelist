cmake_minimum_required(VERSION 3.16)
project(ecosystem_simulator LANGUAGES CXX)

set(CMAKE_CXX_STANDARD 17)
set(CMAKE_CXX_STANDARD_REQUIRED ON)

find_package(SDL3 REQUIRED)

include_directories(${CMAKE_SOURCE_DIR}/include)

file(GLOB_RECURSE SOURCES
    src/*.cpp
)

add_executable(ecosystem_simulator ${SOURCES})

if (SDL3_FOUND)
    target_include_directories(ecosystem_simulator PRIVATE ${SDL3_INCLUDE_DIRS})
    target_link_libraries(ecosystem_simulator PRIVATE ${SDL3_LIBRARIES})
endif
